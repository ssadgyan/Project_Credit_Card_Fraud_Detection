{
     "version": 2,
     "builds": [
       {
         "src": "backend/app.py",
         "use": "@vercel/python",
         "config": {
           "maxLambdaSize": "50mb"
         }
       }
     ],
     "routes": [
       {
         "src": "/(.*)",
         "dest": "backend/app.py"
       }
     ],
     "env": {
       "MONGODB_URI": "your_mongodb_atlas_uri_here",
       "JWT_SECRET": "your_jwt_secret_here",
       "JWT_ALGO": "HS256"
     }
   }